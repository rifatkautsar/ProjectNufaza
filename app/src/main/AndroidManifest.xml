<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rindaman.nufaza">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.rindaman.nufaza.app.AppController"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher_foreground"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:theme="@style/nufazafixtheme">
        <activity
            android:name="com.rindaman.nufaza.startup.SplashScreen"
            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.rindaman.nufaza.startup.Login"
            android:theme="@style/MyMaterialTheme" />
        <activity android:name="com.rindaman.nufaza.fragment.MainActivity"
            android:theme="@style/MyMaterialTheme" />
    </application>

</manifest>